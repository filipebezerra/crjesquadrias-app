<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.libertsolutions.crs.app"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Crs"
        tools:ignore="AllowBackup,UnusedAttribute"
        >

        <activity
            android:name=".launchscreen.LaunchScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/Crs.NoActionBar"
            android:screenOrientation="portrait"
            android:noHistory="true"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Crs.NoActionBar"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            />

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_login_activity"
            android:theme="@style/Crs.NoActionBar"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:noHistory="true"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Crs.NoActionBar"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            />

        <activity
            android:name=".settings.SettingsActivityCompat"
            android:label="@string/title_activity_settings"
            android:theme="@style/Crs.NoActionBar"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            />
    </application>

</manifest>
