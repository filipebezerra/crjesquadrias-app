<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.libertsolutions.crs.app"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Crs"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning,UnusedAttribute"
        >

        <activity
            android:name=".launchscreen.LaunchScreenActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Crs.LaunchScreen"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_login_activity"
            android:noHistory="true"
            android:theme="@style/Crs.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />

        <activity
            android:name=".main.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Crs.NoActionBar"
            android:windowSoftInputMode="stateHidden"
            />

        <activity
            android:name=".settings.SettingsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_settings"
            android:theme="@style/Crs.NoActionBar"
            />

        <activity
            android:name=".settings.SettingsActivityCompat"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_settings"
            android:theme="@style/Crs.NoActionBar"
            />

        <activity
            android:name=".step.WorkStepActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_stage"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/Crs.NoActionBar"
            android:launchMode="singleTop"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.libertsolutions.crs.app.main.MainActivity"
                />
        </activity>

        <activity
            android:name=".checkin.CheckinActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_checkin"
            android:parentActivityName=".step.WorkStepActivity"
            android:theme="@style/Crs.NoActionBar"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.libertsolutions.crs.app.step.WorkStepActivity"
                />
        </activity>
    </application>

</manifest>
